{
    "name": "Focus Zoo",
    "description": "Be productive while unlocking a cute collection of animals! Earn points to expand your collection by following the Pomodoro method.",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "popup.html"
    },
    "options_page": "./options.html",
    "host_permissions": [
      "http://*/*",
      "https://*/*",
      "<all_urls>"
    ],
    "permissions": [
      "tabs",
      "storage",
      "idle",
      "scripting"
    ],
    "background": {
      "service_worker": "background.js"
    }
  }
  